        </th>
        <th>
            @Html.DisplayNameFor(model => model.ciudad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    int fotito = 0;
    if (item.archivos.Count>0) {
        fotito = item.archivos.SingleOrDefault(foto => foto.tipo == "Cliente").archivoID;
    }
    <tr><td> 
            @if (fotito == 0)
            {
                <img src="/image/AAA.png" alt="Alternate Text" height="70" width="100"/>
            }
            else
            {
                <img src="@Url.Action("download","Archivos",new {id=fotito})" height="70" width="100" />
            }





         </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidoP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidoM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaNac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ciudad)
        </td>
       
        <td>
            @Html.ActionLink("Historial Dental", "inicio", "Historials", new { id = item.Id },null) |
            @Html.ActionLink("Historial Clinico", "Details", "HistorialClinico", new { id = item.Id },null) |
            @Html.ActionLink("Citas", "Citas","Citas", new { id = item.Id },null) |
            
             <br/>
            @Html.ActionLink("editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("eliminar", "Delete", new { id=item.Id })
           
        </td>
    </tr>
}

